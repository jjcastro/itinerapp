<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ItinerAppPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.ingesoft.itinerapp.entities.CiudadEntity</class>
    <class>com.ingesoft.itinerapp.entities.EventoEntity</class>
    <class>com.ingesoft.itinerapp.entities.ItinerarioEntity</class>
    <class>com.ingesoft.itinerapp.entities.RecuerdoEntity</class>
    <class>com.ingesoft.itinerapp.entities.UsuarioEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
  </persistence-unit>
</persistence>
